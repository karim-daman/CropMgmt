{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "CropMgmt",
	"version": "0.1.10",

	"identifier": "com.tauri.app",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173/",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "CropMgmt",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"windows": {
				"installMode": "basicUi"
			},
			"endpoints": [
				"https://gist.githubusercontent.com/karim-daman/33c30036b257a52b1716eea5c6306633/raw/latest.json"
			],
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhENTAzOUYxQjVBMEI2MEEKUldRS3RxQzE4VGxRamRhdmNJNzNIckJ2MjcwOFAwd0NGYkRsbEM2aWdSeHYwcmRWWG9RZHFrK2MK"
		}
	}
}
