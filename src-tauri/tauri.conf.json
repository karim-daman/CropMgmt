{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "application",
	"version": "0.1.0",
	"identifier": "com.tauri.app",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173/",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "application",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"windows": {
				"installMode": "passive"
			},
			"endpoints": ["An endpoint that serves the raw content of the latest.json file"],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhENTAzOUYxQjVBMEI2MEEKUldRS3RxQzE4VGxRamRhdmNJNzNIckJ2MjcwOFAwd0NGYkRsbEM2aWdSeHYwcmRWWG9RZHFrK2MK"
		}
	}
}
